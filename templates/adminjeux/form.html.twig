            <style>
            .taClass{
            height : 40vh !important ;
            width : 100% ;
            }
            </style>
        {% endblock %}
    </div>

    <div class="row">
        <div class="col-md-6">{{ form_row(form.regledujeu) }}</div>
        <div class="col-md-6">{{ form_row(form.contenuboite) }}</div>
    </div>





        {{form_widget(form)}}

    <button class="btn btn-primary">{{ button|default ('Sauvegarder les changements')}}</button>

