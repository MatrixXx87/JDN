{{ form_start(form) }}

    <div class="row">
        <div class="col-md-4">{{ form_row(form.title) }}</div>
        <div class="col-md-2">{{ form_row(form.joueursmini) }}</div>
        <div class="col-md-2">{{ form_row(form.joueursmaxi) }}</div>
        <div class="col-md-2">{{ form_row(form.timegame) }}</div>
        <div class="col-md-2">{{ form_row(form.agemini) }}</div>
    </div>
    
    <div class="row">
        <div class="col-md-12">{{form_row(form.description , { 'attr': {'class': 'taClass'} }) }}</div>
